<?xml version="1.0"?>
<root>
	<item>
		<name>Caps Lock to tmux prefix (C-a) in terminal</name>
		<identifier>private.caps_iterm</identifier>
		<only>TERMINAL</only>
		<autogen>
			--KeyToKey--
			KeyCode::F19,

			KeyCode::A, ModifierFlag::CONTROL_L
		</autogen>
	</item>
	<item>
		<name>Caps Lock to shit+ctrl+option</name>
		<identifier>private.caps</identifier>
		<autogen>
			--KeyToKey--
			KeyCode::F19,

			KeyCode::OPTION_L,
			ModifierFlag::SHIFT_L | ModifierFlag::CONTROL_L
		</autogen>
	</item>
</root>
